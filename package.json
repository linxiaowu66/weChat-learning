{
  "name": "scan-express",
  "version": "0.0.1",
  "description": "微信网页开发demo",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/linxiaowu66/weChat-learning"
  },
  "keywords": [
    "express",
    "webpack",
    "vue",
    "node"
  ],
  "author": "linxiaowu66",
  "license": "MIT",
  "bugs": {
    "url": "git@192.168.1.66:FE/scan-express.git/issues"
  },
  "homepage": "git@192.168.1.66:FE/scan-express",
  "scripts": {
    "deploy": "npm install --registry=http://r.cnpmjs.org && npm run build && forever stopall && NODE_ENV=production forever start --minUptime 1000 --spinSleepTime 1000  ./dist/server/server.js",
    "dev": "better-npm-run start-server-dev",
    "build": "gulp build-server && node webpack/build.js",
    "start": "NODE_ENV=production node ./server/server.js",
    "lint": "eslint ./ --ext .js --cache --ignore-pattern .gitignore",
    "lintFix": "eslint ./ --cache --fix --ignore-pattern .gitignore",
    "precommit-msg": "echo Pre-commit checking...please wait && exit 0"
  },
  "betterScripts": {
    "start-server-dev": {
      "command": "node babel-register.js",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2017": "^6.16.0",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "crypto": "0.0.3",
    "express": "^4.13.3",
    "express-session": "^1.14.2",
    "mongoose": "^4.7.4",
    "js-to-java": "^2.4.0",
    "jssha": "^1.5.0",
    "memory-cache": "^0.1.6",
    "morgan": "^1.7.0",
    "pug": "^2.0.0-beta6",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "reqwest": "^2.0.5",
    "session-file-store": "^1.0.0",
    "wechat-oauth": "^1.2.0",
    "weui": "^1.1.0",
    "zepto": "^1.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.0.0",
    "babel-register": "^6.18.0",
    "better-npm-run": "0.0.13",
    "css-loader": "^0.25.0",
    "debug": "^2.5.2",
    "eslint": "^3.7.1",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-friendly-formatter": "^2.0.5",
    "eslint-import-resolver-webpack": "^0.6.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-html": "^1.3.0",
    "eslint-plugin-import": "^1.16.0",
    "eventsource-polyfill": "^0.9.6",
    "exports-loader": "^0.6.3",
    "file-loader": "^0.9.0",
    "ghooks": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-clean": "^0.3.2",
    "gulp-sourcemaps": "^1.9.1",
    "inject-loader": "^2.0.1",
    "json-loader": "^0.5.4",
    "ora": "^0.3.0",
    "prepare-commit-msg-dianwoda": "^0.2.1",
    "script-loader": "^0.7.0",
    "shelljs": "^0.7.5",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.8.2",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.3",
    "webpack-hot-middleware": "^2.12.2"
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": ">= 3.0.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "ghooks": {
      "pre-commit": "npm run precommit-msg && npm run lint",
      "prepare-commit-msg": "prepare-commit-msg-dianwoda $2 $3",
      "commit-msg": "validate-commit-msg"
    }
  }
}
